# =============================================================================
# GHM Marketing Dashboard - Environment Variables
# Copy to .env.local and fill in real values
# =============================================================================

# Database (Vercel Postgres)
DATABASE_URL="postgresql://user:password@host:5432/ghm_dashboard?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/ghm_dashboard?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# External APIs (Scenario 2: Real APIs with test keys)
# Outscraper - Business data enrichment ($5 credit to start)
OUTSCRAPER_API_KEY=""

# Ahrefs - SEO metrics ($29/mo Lite plan)
AHREFS_API_TOKEN=""

# Google PageSpeed - Site speed analysis (FREE)
PAGESPEED_API_KEY=""

# Resend - Email delivery (FREE up to 3,000/mo)
RESEND_API_KEY=""
FROM_EMAIL="noreply@ghmmarketing.com"

# Vercel Blob - File storage (included with Vercel)
BLOB_READ_WRITE_TOKEN=""

# Vercel Cron - Automated task scheduling
# Generate a secure random string for cron job authentication
CRON_SECRET="generate-with-openssl-rand-base64-32"

# Google Ads API
GOOGLE_ADS_CLIENT_ID=""
GOOGLE_ADS_CLIENT_SECRET=""
GOOGLE_ADS_DEVELOPER_TOKEN=""
GOOGLE_ADS_REDIRECT_URI="https://your-domain.com/api/oauth/google-ads/callback"

# GoDaddy API
GODADDY_API_KEY=""
GODADDY_API_SECRET=""
GODADDY_ENVIRONMENT="production"

# Multi-tenant platform (Covos)
# Root domain for subdomain resolution — do not include trailing slash
ROOT_DOMAIN="covos.app"

# COVOS telemetry — anonymous cross-tenant usage signals (FEAT-020)
# Leave blank to disable telemetry entirely
COVOS_TELEMETRY_ENDPOINT=""
COVOS_TENANT_SLUG="ghm"
